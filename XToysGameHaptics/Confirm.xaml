<Window x:Class="XToysGameHaptics.Confirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XToysGameHaptics"
        Title="Confirm" Height="160" Width="240">
    <Grid Margin="0,0,0,0">
        <TextBlock Name="ConfirmationText" HorizontalAlignment="Center" Padding="10,10,10,0" TextWrapping="Wrap" Text="XToys would like to connect to. Continue?" VerticalAlignment="Top" Height="65" Width="217"/>
        <Button IsDefault="true" Content="Yes" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="YesButton_Click" />
        <Button IsCancel="true" Content="No" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="NoButton_Click" />

    </Grid>
</Window>
